# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}
{%- import_yaml tplroot ~ "/osfamilymap.yaml" as osfamilymap %}
{%- import_yaml tplroot ~ "/osmap.yaml" as osmap %}
{%- import_yaml tplroot ~ "/osarchmap.yaml" as osarchmap %}
{%- import_yaml tplroot ~ "/osfingermap.yaml" as osfingermap %}

{%- set _config = salt['config.get'](tplroot, default={}) %}

{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
      merge=salt['grains.filter_by'](
        osfamilymap,
        grain='os_family',
        merge=salt['grains.filter_by'](
          osarchmap,
          grain='osarch',
          merge=salt['grains.filter_by'](
            osmap,
            grain='os',
            merge=salt['grains.filter_by'](
              osfingermap,
              grain='osfinger',
              merge=salt['grains.filter_by'](
                _config,
                default='lookup'
              )
            )
          )
        )
      )
    )
 %}

{%- set config = salt['grains.filter_by'](
      {'defaults': defaults},
      default='defaults',
      merge=_config
    )
%}
{%- set golang = config %}

{%- do golang.update({'kernel': grains.kernel | lower}) %}
{%- if grains.os == 'MacOS' %}
{%-   set macos_user = salt['cmd.run']("stat -f '%Su' /dev/console") %}
{%-   set macos_group = salt['cmd.run']("stat -f '%Sg' /dev/console") %}
{%-   do golang.update({'rootuser': macos_user,
                        'rootgroup': macos_group,
                        'go_path': '/Users/%s/go'|format(golang.rootuser)
                      }) %}
{%- elif grains.os == 'Windows' and 'cpuarch' in grains %}
    {%- do golang.update({'arch': grains.cpuarch|lower}) %}
{%- endif %}

{%- if golang.pkg.use_upstream_archive %}
    {%- set name = 'go%s.%s-%s'|format(golang.version, golang.kernel, golang.arch) %}
    {%- set archive_suffix = golang.pkg.archive_helper.archive_suffix %}
    {%- set uri = golang.pkg.archive_helper.uri + '/' + name %}
    {%- if golang.pkg.archive.source_hash %}
        {%- set source_hash = golang.pkg.archive.source_hash %}
    {%- else %}
        {%- set source_hash = uri + '.' + archive_suffix + '.sha256' %}
    {%- endif %}
    {%- do golang.pkg.archive.update({
           'name':           golang.pkg.archive.name + '/' + name,
           'source':         uri + '.' + archive_suffix,
           'source_hash':    source_hash,
           'archive_format': golang.pkg.archive.archive_format
    }) %}
    {%- do golang.update({'path': golang.pkg.archive.name}) %}
    {%- do golang.environ.append('export PATH=${PATH}:%s/go/bin'|format(golang.pkg.archive.name)) %}
{%- endif %}

{#- Depreciated parameter 'golang.dir' #}
{%- if 'dir' in golang and golang.dir and golang.kernel == 'linux' %}
{%-    do golang.linux.update({'dir': golang.dir}) %}
{%- endif %}
